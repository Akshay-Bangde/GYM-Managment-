<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activities.Add_Equipment_Acitivity"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkYellow"
            app:popupTheme="@style/PopupOverlay" >


            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gym_equipment"
                android:textSize="@dimen/twenty_one_sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/fifteen_dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:elevation="5dp"
                        android:padding="@dimen/five_dp"
                        android:src="@drawable/profile_image"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/equipmentname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="@string/equipment_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/seventeen_sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  *"
                            android:textColor="@color/red"
                            android:layout_marginTop="10dp"
                            android:textSize="@dimen/seventeen_sp"
                            />




                    </LinearLayout>

                    <EditText
                        android:id="@+id/equipment_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:theme="@style/InputLabel"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:textSize="@dimen/seventeen_sp"
                    android:textColor="@color/black"
                    />


                    </LinearLayout>


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hun_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:textSize="@dimen/seventeen_sp"
                        android:textColor="@color/black"
                        android:theme="@style/InputLabel"
                        android:scrollbars="vertical"
                        android:background="@drawable/rouneded_black_corner_for_details"
                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/ten_dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten_dp"
                            android:gravity="center_vertical"
                            android:text="@string/purchase_rate"
                            android:textColor="@color/black"
                            android:textSize="@dimen/seventeen_sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  *"
                            android:textColor="@color/red"
                            android:layout_marginTop="10dp"
                            android:textSize="@dimen/seventeen_sp"
                            />


                    </LinearLayout>

                          <EditText
                              android:id="@+id/purchaseRate"
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/fifty_dp"
                              android:background="@drawable/rounded_corner_for_payments"
                              android:layout_marginTop="@dimen/ten_dp"
                              android:theme="@style/InputLabel"
                              android:hint="0"
                              android:inputType="number"
                              />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten_dp"
                            android:gravity="center_vertical"
                            android:text="@string/quantity"
                            android:textColor="@color/black"
                            android:textSize="@dimen/seventeen_sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  *"
                            android:textColor="@color/red"
                            android:layout_marginTop="10dp"
                            android:textSize="@dimen/seventeen_sp"
                            />


                    </LinearLayout>


                         <EditText
                             android:id="@+id/Quantity"
                             android:layout_width="match_parent"
                             android:layout_height="@dimen/fifty_dp"
                             android:theme="@style/InputLabel"
                             android:inputType="number"
                             android:background="@drawable/rounded_corner_for_payments"
                             android:layout_marginTop="@dimen/ten_dp"
                            android:hint="0"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/ten_dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="@string/net_amount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/seventeen_sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/equipment_net_amount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:hint="0.0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen_sp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/rounded_corner_for_payments_grey"
                      />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/fifty_dp"
                        android:layout_marginEnd="@dimen/thirty_dp"
                        android:layout_marginBottom="@dimen/thirty_dp"
                        android:background="@drawable/round_yellow_button">


                        <Button
                            android:id="@+id/save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="@string/save"
                            android:textColor="@color/white"
                            android:textSize="@dimen/seventeen_sp" />

                        <ProgressBar
                            android:id="@+id/pb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:theme="@style/WhiteAccent"
                            android:visibility="gone"

                            />

                    </FrameLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>


