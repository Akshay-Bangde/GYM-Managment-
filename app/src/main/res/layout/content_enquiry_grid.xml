<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/productLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_marginTop="@dimen/ten_dp"
    android:layout_marginStart="@dimen/ten_dp"
    android:layout_marginEnd="@dimen/ten_dp"

    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/fifteen_dp"
        app:cardBackgroundColor="@color/fint_grey"
        android:layout_marginBottom="@dimen/ten_dp"
        android:elevation="@dimen/ten_dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/ten_dp"
            >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Sr.No"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/e_srno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/fifteen_dp"
                    android:layout_weight="1"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/e_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dumb-bells"
                    android:textSize="@dimen/fifteen_dp"
                    android:maxLines="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/e_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS 10000"
                    android:textSize="@dimen/fifteen_dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Inquiry Date"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/enq_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1945cc1"
                    android:textSize="@dimen/fifteen_dp"
                    android:layout_weight="3"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Next Followup"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/e_nextfd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS 10000"
                    android:textSize="@dimen/fifteen_dp"
                    />


            </LinearLayout>











            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
              >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/e_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textSize="@dimen/fifteen_sp"
                    />


            </LinearLayout>













            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/five_dp"


                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Details"
                    android:textSize="@dimen/seventeen_sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Contact_no"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:id="@+id/e_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textSize="@dimen/fifteen_sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:id="@+id/e_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textSize="@dimen/fifteen_sp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/City"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:id="@+id/e_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textSize="@dimen/fifteen_sp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/enq_delete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fourty"
                android:background="@drawable/round_yellow_button"
                android:gravity="center"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fifteen_dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>