<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        android:backgroundTint="@color/fint_grey"
        android:baselineAligned="false"
        app:cardCornerRadius="@dimen/fifteen_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:weightSum="4"
            >

    <TextView
        android:id="@+id/memberName"
        android:layout_width="@dimen/eighty_dp"
        android:layout_height="@dimen/thirty_dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="akshayadfhdsfkdshfdkfhdsk"
        android:maxLines="1"
        android:paddingStart="@dimen/five_dp"
        android:paddingEnd="@dimen/ten_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/seventeen_sp"
        />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:weightSum="3"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/darkYellow"

                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/darkYellow"

                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/darkYellow"


                    />

            </RadioGroup>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>