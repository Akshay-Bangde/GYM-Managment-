<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:padding="@dimen/ten_dp">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp"
            >

            <LinearLayout
                android:id="@+id/trainer_employee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/trainer" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/trainer_employee"
                    android:textSize="@dimen/thirteen_sp"
                     />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/renew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:src="@drawable/renew" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourty"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="@string/renew"
                        android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/member_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/twenty_dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/member_group" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/member_group"
                    android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/member"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/twenty_dp">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/member" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/member"
                    android:textSize="@dimen/thirteen_sp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/member_attendance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/twenty_dp">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/member_attendance" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/member_attendance"
                    android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/employee_attendance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/twenty_dp">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/employee_attendance" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/employee_attendance"
                    android:textSize="@dimen/thirteen_sp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
<!--</ScrollView>-->
</LinearLayout>