<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Add_Diet_Plan_Activity"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkYellow"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_diet_plan_"
                android:textSize="@dimen/twenty_one_sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textStyle="bold"/>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/seventeen_sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Diet_Plan_Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/fifteen_sp" />

            </LinearLayout>


            <EditText
                android:id="@+id/dietplan_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/seventeen_sp"
                android:theme="@style/InputLabel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/preworkout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Pre_Workout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/fifteen_sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/preworkout_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"

                android:theme="@style/InputLabel"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postwork_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Post_Workout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/fifteen_sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/postwork_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:theme="@style/InputLabel"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/breakfast_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Breakfast"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/fifteen_sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/breakfast_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:theme="@style/InputLabel"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/msnacks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Morning_Snacks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/fifteen_sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/msnacks_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:theme="@style/InputLabel"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lunch_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lunch"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/seventeen_sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/lunch_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:theme="@style/InputLabel"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/esnacks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Evening_Snacks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/seventeen_sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/esnacks_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:theme="@style/InputLabel"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dinner_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Dinner"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/seventeen_sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/dinner_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:theme="@style/InputLabel"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/meal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Meal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/seventeen_sp" />


            </LinearLayout>

            <EditText
                android:id="@+id/meal_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/rounded_corner_for_payments"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:theme="@style/InputLabel"
                android:visibility="visible" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_dp"
                android:layout_marginTop="@dimen/fifty_dp"
                android:layout_marginEnd="@dimen/thirty_dp"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:background="@drawable/round_yellow_button">

                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/seventeen_sp" />

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:theme="@style/WhiteAccent"
                    android:visibility="gone"

                    />

            </FrameLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>