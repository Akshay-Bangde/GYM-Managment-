<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/ten_dp"
    android:weightSum="3">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/duration_period"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/duration_setting"
                    android:layout_marginTop="@dimen/twenty_dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/duratio_setting"
                    android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/workout_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/workout_category"
                    android:layout_marginTop="@dimen/twenty_dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/workout_category"
                    android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/workout_exercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/workout_exercise"
                    android:layout_marginTop="@dimen/twenty_dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/workout_exercise"
                    android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/gym_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/gym_activity"
                    android:layout_marginTop="@dimen/twenty_dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/gym_activity"
                    android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/gym_package"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/gym_package"
                    android:layout_marginTop="@dimen/twenty_dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/gym_package"
                    android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/Gymprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="@dimen/fifteen_dp"
                    android:src="@drawable/profile"
                    android:layout_marginTop="@dimen/twenty_dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/profile"
                    android:textSize="@dimen/thirteen_sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
