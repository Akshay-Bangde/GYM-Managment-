<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fint_grey"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:id="@+id/id"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:text="Sr.No"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/ID"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/id"
                    android:text="1"
                    android:textColor="@color/border_black"
                    android:textSize="@dimen/fifteen_sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id"
                    android:layout_marginTop="@dimen/five_dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:text="Glass No"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/NAME"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ID"
                    android:textColor="@color/border_black"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/name"
                    android:text="20"
                    android:textSize="@dimen/fifteen_sp"
                    android:layout_marginTop="@dimen/five_dp"

                    />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NAME"
                    android:layout_marginTop="@dimen/seven_dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:text="Status"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/STATUS"
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NAME"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/status"
                    android:text="status"
                    android:gravity="center"
                    android:background="@drawable/rounded_activestatusbtn"
                    android:padding="@dimen/four_dp"
                    android:layout_marginTop="@dimen/seven_dp"
                    android:textSize="@dimen/fifteen_sp"
                    android:textColor="@color/white"

                    />



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginEnd="@dimen/ten_dp"

                >


                <Button
                    android:id="@+id/edit"
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/fourty"
                    android:background="@drawable/round_yellow_button"
                    android:text="@string/edit"
                    android:textSize="@dimen/fifteen_sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginEnd="@dimen/thirty_dp"

                    />
                <Button
                    android:id="@+id/delete"
                    android:layout_width="@dimen/eighty_dp"
                    android:layout_height="@dimen/fourty"
                    android:background="@drawable/round_yellow_button"
                    android:text="@string/delete"
                    android:textSize="@dimen/fifteen_sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/thirty_dp"
                    android:textAllCaps="false"


                    />

            </LinearLayout>




        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>