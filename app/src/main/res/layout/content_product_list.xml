<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fint_grey"
        app:cardCornerRadius="@dimen/fifteen_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:elevation="@dimen/ten_dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/ten_dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Sr.No"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/proSrNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/fifteen_dp"
                    android:layout_weight="1"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whey pro"
                    android:textSize="@dimen/fifteen_dp"
                    android:layout_weight="3"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Product Purchase No."
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/pro_ppn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:textSize="@dimen/fifteen_dp"
                    android:maxLines="1"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:text="Supplier Name"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/pro_spname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mumbai Exproters"
                    android:textSize="@dimen/fifteen_dp"
                    android:maxLines="1"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Unit Rate"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/pro_unit_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textSize="@dimen/fifteen_dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/pro_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="@dimen/fifteen_dp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Sub Total"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/pro_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS 10000"
                    android:textSize="@dimen/fifteen_dp"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Tax"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/pro_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS 10000"
                    android:textSize="@dimen/fifteen_dp"
                    />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Net Amount"
                    android:textSize="@dimen/fifteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/pro_net_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS 10000"
                    android:textSize="@dimen/fifteen_dp"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <Button
                    android:id="@+id/reorderbtn"
                    android:layout_width="@dimen/ninty_dp"
                    android:layout_height="@dimen/fourty"
                    android:text="Reorder"
                    android:textSize="@dimen/fifteen_sp"
                    android:textAllCaps="false"
                    android:background="@drawable/round_yellow_button"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"

                    />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
