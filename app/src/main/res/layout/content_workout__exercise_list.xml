<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        android:backgroundTint="@color/fint_grey"
        android:baselineAligned="false"
        app:cardCornerRadius="@dimen/fifteen_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"

                    >


                    <TextView
                        android:id="@+id/id"
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/twenty_dp"
                        android:text="Sr.No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ID"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_toRightOf="@+id/id"
                        android:text="1"
                        android:textColor="@color/border_black"
                        android:textSize="@dimen/fifteen_sp" />

                    <TextView
                        android:id="@+id/bodypart"
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id"
                        android:layout_marginStart="@dimen/twenty_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="Body Part"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BODYPARTNAME"

                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ID"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:layout_toRightOf="@+id/bodypart"
                        android:text="Arms"
                        android:textColor="@color/border_black"
                        android:textSize="@dimen/fifteen_sp"

                        />


                    <TextView
                        android:id="@+id/workout"
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/BODYPARTNAME"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="Workout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/WORKOUTNAME"

                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/ten_dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/BODYPARTNAME"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:layout_toRightOf="@+id/workout"
                        android:text="Six Packs"
                        android:textColor="@color/border_black"
                        android:textSize="@dimen/fifteen_sp"

                        />






                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_margin="@dimen/ten_dp"

                    >


                    <Button
                        android:id="@+id/edit"
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="@dimen/fourty"
                        android:background="@drawable/round_yellow_button"
                        android:text="@string/edit"
                        android:textSize="@dimen/fifteen_sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_marginEnd="@dimen/thirty_dp"

                        />
                    <Button
                        android:id="@+id/delete"
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="@dimen/fourty"
                        android:background="@drawable/round_yellow_button"
                        android:text="@string/delete"
                        android:textSize="@dimen/fifteen_sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/thirty_dp"
                        android:textAllCaps="false"


                        />

                </LinearLayout>

                  </LinearLayout>








        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>