<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/fint_grey"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            >

            <TextView
                android:id="@+id/id"
                android:layout_width="@dimen/one_fifteen_dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Sr.No"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/ID"
                android:layout_width="@dimen/one_thirty_dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/id"
                android:textSize="@dimen/fifteen_sp"
                android:text="1"
                android:textColor="@color/border_black" />

            <TextView
                android:id="@+id/name"
                android:layout_width="@dimen/one_fifteen_dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id"
                android:layout_marginStart="20dp"
                android:text="Group Name"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/NAME"
                android:layout_width="@dimen/one_thirty_dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ID"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/name"
                android:textSize="@dimen/fifteen_sp"
                android:text="Rocks"
                android:textColor="@color/border_black" />

            <TextView
                android:id="@+id/punchId"
                android:layout_width="@dimen/one_fifteen_dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="20dp"
                android:text="Package Name"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/PUNCHID"
                android:layout_width="@dimen/one_thirty_dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NAME"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_toRightOf="@+id/punchId"
                android:text="Golden"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/border_black" />


            <TextView
                android:id="@+id/contact_no"
                android:layout_width="@dimen/one_fifteen_dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PUNCHID"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:text="Total Member"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/CONTACTNO"
                android:layout_width="@dimen/one_thirty_dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PUNCHID"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/contact_no"
                android:text="10"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/border_black" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="@dimen/one_fifteen_dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CONTACTNO"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:text="Contact Person"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/SALARY"
                android:layout_width="@dimen/one_thirty_dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CONTACTNO"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/salary"
                android:text="Mohit"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/border_black" />





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/ten_dp"

            >


            <Button
                android:id="@+id/edit"
                android:layout_width="@dimen/eighty_dp"
                android:layout_height="@dimen/fourty"
                android:background="@drawable/round_yellow_button"
                android:text="@string/edit"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/thirty_dp"

                />
            <Button
                android:id="@+id/delete"
                android:layout_width="@dimen/eighty_dp"
                android:layout_height="@dimen/fourty"
                android:background="@drawable/round_yellow_button"
                android:text="@string/delete"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/thirty_dp"
                android:textAllCaps="false"


                />

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
</LinearLayout>